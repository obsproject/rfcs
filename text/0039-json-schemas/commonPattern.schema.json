{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Common Pattern",
    "description": "Pattern used multiple times in OBS JSON Schemas",
    "$defs": {
        "linkPattern": {
            "description": "Pattern to enforce HTTP(S) links",
            "pattern": "^https?://"
        },
        "codecPattern": {
            "description": "Pattern to enforce lowercase and no whitecase on codec naming",
            "pattern": "^[a-z0-9]+$"
        },
        "resolutionPattern": {
            "description": "Pattern for resolution without framerate",
            "pattern": "^[0-9]+x[0-9]+$"
        },
        "resolutionFrameratePattern": {
            "description": "Pattern for resolution with framerate",
            "pattern": "^[0-9]+x[0-9]+@[0-9]+$"
        }
    }
}
